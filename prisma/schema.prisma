generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  email    String  @unique
  id       Int     @id @default(autoincrement())
  name     String
  password String
  story    story[]
}

model story {
  id          Int       @id @default(autoincrement())
  title       String
  created_at  DateTime? @default(now())
  owner_id    Int?
  description String?
  stars       Int?      @default(0)
  link        String?
  users       users?    @relation(fields: [owner_id], references: [id])
}
